<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%- include('./layout/bootstrap_css') %>

</head>
<body>
    <%- include('./layout/nav') %>
    <h1>Subject page</h1>
    
    <div class="container form-control">
        <!-- Adding new Subject -->
         <div class="container text-end mt-1">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Subject</button>
         </div>
         <br>
         <div class="container">
            <% subject.forEach(subject => { %>
                <div class="accordion" id="<%= subject.id %>">
                    <div class="accordion-item">
                      <h2 class="accordion-header">
                        <button class="accordion-button bg-success text-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= subject.id %>" aria-expanded="true" aria-controls="collapse-<%= subject.id %>">
                          <strong><%= subject.name %></strong>
                        </button>
                      </h2>
                      <div id="collapse-<%= subject.id %>" class="accordion-collapse collapse show" data-bs-parent="#<%= subject.id %>">
                        <div class="accordion-body">
                          <%= subject.description %>
                        </div>
                      </div>
                    </div>
                </div>
            <% }) %>
            
        </div>
        
    </div>

    

    <!-- Modal for adding new subject -->
    <form action="/subject" method="post">
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Subject</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                        <div class="mb-3">
                            <label for="name" class="col-form-label">Name:</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="col-form-label">Description:</label>
                            <textarea class="form-control" id="description" name="description"></textarea>
                        </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    



    <%- include('./layout/bootstrap_script') %>
</body>
</html>